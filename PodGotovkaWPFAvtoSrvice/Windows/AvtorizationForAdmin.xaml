<Window x:Class="PodGotovkaWPFAvtoSrvice.Windows.AvtorizationForAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PodGotovkaWPFAvtoSrvice.Windows"
        mc:Ignorable="d"
              Title="авторизация" Height="550" Width="900" MinHeight="550" MinWidth="900">
    <Grid Background="CadetBlue">
        <Label Content="Авторизация" HorizontalAlignment="Center" VerticalContentAlignment="Top" Height="39" Width="104" VerticalAlignment="Top" />
        <TextBox x:Name="txtLoginBox" Background="White" HorizontalAlignment="Center" Height="40" Width="204" Text="Логин"  ></TextBox>
        <TextBox x:Name="txtPasswordBox" Background="White" HorizontalAlignment="Center" Height="40" Width="204" Text="Пароль" Margin="1,100,0,0" />
        <Button x:Name="BtnLoginUser" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="40" Width="204"  Content="Войти" Click="BtnLoginUser_Click"></Button>
    </Grid>
</Window>
